        }

        .result {
            margin-top: 20px;
            font-size: 18px;
            font-weight: bold;
        }
    </style>
    <script>
        function calculateCost() {
            const baseCost = parseFloat(document.getElementById("base-cost").value) || 0;
            const repairType = document.getElementById("repair-type").value;

            let repairCost = 0;

            switch (repairType) {
                case "screen":
                    repairCost = 40;
                    break;
                case "battery":
                    repairCost = 30;
                    break;
                case "charging-port":
                    repairCost = 30;
                    break;
                case "back-glass":
                    repairCost = 30;
                    break;
                default:
                    repairCost = 0;
            }

            const partCostWithVAT = baseCost * 1.24;
            const totalCostWithVAT = partCostWithVAT + repairCost;
            const roundedCost = Math.ceil(totalCostWithVAT / 5) * 5;

            document.getElementById("part-cost-vat").innerText = `Κόστος Ανταλλακτικού με ΦΠΑ: €${partCostWithVAT.toFixed(2)}`;
            document.getElementById("result").innerText = `Τελικό Κόστος Επισκευής: €${roundedCost}`;
        }

        function clearFields() {
            document.getElementById("base-cost").value = "";
            document.getElementById("repair-type").value = "none";
            document.getElementById("part-cost-vat").innerText = "";
            document.getElementById("result").innerText = "";
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>Υπολογισμός Κόστους Επισκευής</h1>
        <label for="base-cost">Κόστος Ανταλλακτικού χωρίς ΦΠΑ (€):</label>
        <input type="number" id="base-cost" inputmode="decimal" pattern="[0-9]*" oninput="calculateCost()" placeholder="Π.χ. 100">

        <div class="part-cost-box" id="part-cost-vat"></div>

        <label for="repair-type">Επιλέξτε κατηγορία επισκευής:</label>
        <select id="repair-type" onchange="calculateCost()">
            <option value="none">-- Επιλέξτε κατηγορία --</option>
            <option value="screen">Αλλαγή Οθόνης (+€40 με ΦΠΑ)</option>
            <option value="battery">Αλλαγή Μπαταρίας (+€30 με ΦΠΑ)</option>
            <option value="charging-port">Αλλαγή Υποδοχής Φόρτισης (+€30 με ΦΠΑ)</option>
            <option value="back-glass">Αλλαγή Πίσω Τζάμι (+€30 με ΦΠΑ)</option>
        </select>

        <div class="result" id="result"></div>

        <button onclick="clearFields()">Καθαρισμός</button>
    </div>
</body>
